{
    "version": 2,
    "builds": [
      {
        "src": "webapp/package.json",
        "use": "@vercel/next",
        // ✅ ИСПРАВЛЕНИЕ: Указываем Vercel, что результат сборки Next.js находится внутри папки webapp
        "config": {
          "outputDirectory": "webapp"
        }
      },
      {
        "src": "api/index.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        // ✅ ИСПРАВЛЕНИЕ: Точный маршрут к API без слэша и регулярных выражений
        "src": "/api/tts/generate",  
        "dest": "api/index.py"
      },
      {
        // Маршрут для всех остальных файлов (фронтенд)
        "src": "/(.*)",
        "dest": "webapp/$1"
      }
    ]
}
