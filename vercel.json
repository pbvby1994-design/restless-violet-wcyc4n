{
    "version": 2,
    "builds": [
      {
        "src": "webapp/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "api/index.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/tts/generate/",  <-- ИСПРАВЛЕНИЕ: Точное соответствие пути
        "dest": "api/index.py"
      },
      {
        "src": "/(.*)",
        "dest": "webapp/$1"
      }
    ]
}
